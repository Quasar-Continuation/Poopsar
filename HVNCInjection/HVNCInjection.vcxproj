    <Message Text="▶ Copying $(TargetFileName) to Pulsar.Server output folders..." Importance="High" />

    <!-- Primary solution-level bin (e.g. <solution>/bin/Debug/) -->
    <MakeDir Directories="$(SolutionDir)bin\$(Configuration)" Condition=" '$(SolutionDir)' != '' " />
    <Copy SourceFiles="$(OutDir)$(TargetFileName)" DestinationFolder="$(SolutionDir)bin\$(Configuration)" SkipUnchangedFiles="true" Condition="Exists('$(OutDir)$(TargetFileName)')" />

    <!-- Framework-specific folder (common for SDK projects) -->
    <MakeDir Directories="$(SolutionDir)bin\$(Configuration)\net9.0-windows" Condition=" '$(SolutionDir)' != '' " />
    <Copy SourceFiles="$(OutDir)$(TargetFileName)" DestinationFolder="$(SolutionDir)bin\$(Configuration)\net9.0-windows" SkipUnchangedFiles="true" Condition="Exists('$(OutDir)$(TargetFileName)')" />

    <!-- Pulsar.Server project-level bin (covers Pulsar.Server's own OutputPath which resolves to ../bin/...) -->
