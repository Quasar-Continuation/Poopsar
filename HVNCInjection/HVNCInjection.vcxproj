    <Copy SourceFiles="$(OutDir)$(TargetFileName)" DestinationFolder="$(SolutionDir)Pulsar.Server\..\bin\$(Configuration)" SkipUnchangedFiles="true" Condition="Exists('$(OutDir)$(TargetFileName)')" />

